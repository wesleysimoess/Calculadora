<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242c3f"
    android:orientation="vertical"
    tools:context=".CalculadoraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVisor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="1234567890"
            android:textAlignment="textEnd"
            android:textColor="#dbdfe8"
            android:textSize="@android:dimen/app_icon_size"
            tools:background="#161a23" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            style="@style/estiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"
            style="@style/estiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="+/-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button3"
            style="@style/estiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="%"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"
            style="@style/estiloBotoesOperacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="/"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button6"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button7"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"
            style="@style/estiloBotoesOperacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="X"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button9"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button10"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button11"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button12"
            style="@style/estiloBotoesOperacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="-"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button13"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button14"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button15"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button16"
            style="@style/estiloBotoesOperacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="+"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button17"
            style="@style/estiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="INFO"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button18"
            style="@style/estiloBotoesNumericos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:onClick="onClickNumeros" />

        <Button
            android:id="@+id/button19"
            style="@style/estiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text=","
            android:textSize="30sp" />

        <Button
            android:id="@+id/button20"
            style="@style/estiloBotoesOperacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="="
            android:textSize="30sp" />
    </LinearLayout>


</LinearLayout>